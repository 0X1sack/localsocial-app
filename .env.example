# LocalSocial Environment Variables
# Copy this file to .env.local and fill in your actual values

# ==============================================
# Supabase Configuration
# ==============================================
# Get these from your Supabase project dashboard
# https://app.supabase.com/project/YOUR_PROJECT/settings/api
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# ==============================================
# Meta (Facebook/Instagram) API
# ==============================================
# Get these from Facebook Developer Console
# https://developers.facebook.com/apps/
VITE_FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Facebook API Version (leave as is unless you need a specific version)
VITE_FACEBOOK_API_VERSION=v19.0

# ==============================================
# Google Business Profile API (Optional)
# ==============================================
# Get these from Google Cloud Console
# https://console.cloud.google.com/
VITE_GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_SERVICE_ACCOUNT_JSON=path/to/service-account-key.json

# ==============================================
# LinkedIn API (Optional)
# ==============================================
# Get these from LinkedIn Developer Portal
# https://developer.linkedin.com/
VITE_LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# ==============================================
# OpenAI API (Optional - for content generation)
# ==============================================
# Get this from OpenAI Platform
# https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key

# ==============================================
# Cloudinary (Optional - for media storage)
# ==============================================
# Get these from Cloudinary Console
# https://cloudinary.com/console
VITE_CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ==============================================
# Development Configuration
# ==============================================
# Base URL for OAuth redirects
VITE_BASE_URL=http://localhost:5173

# Enable debug logging in development
VITE_DEBUG=true

# ==============================================
# Production Configuration
# ==============================================
# Set to 'production' when deploying
NODE_ENV=development

# Your production domain (update when deploying)
VITE_PRODUCTION_URL=https://your-domain.com

# ==============================================
# Rate Limiting Configuration
# ==============================================
# Facebook API limits
FACEBOOK_POSTS_PER_DAY=50
FACEBOOK_REQUESTS_PER_HOUR=200

# Google API limits
GOOGLE_REQUESTS_PER_MINUTE=300
GOOGLE_EDITS_PER_MINUTE=10

# LinkedIn API limits
LINKEDIN_REQUESTS_PER_DAY=500

# ==============================================
# Security Configuration
# ==============================================
# JWT secret for session encryption (generate a random string)
JWT_SECRET=your-jwt-secret-min-32-characters

# CORS origins (comma-separated for multiple domains)
CORS_ORIGINS=http://localhost:5173,https://your-domain.com